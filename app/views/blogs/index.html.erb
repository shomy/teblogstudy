

<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<%= search_form_for @q do |f| %>
  <%= f.search_field :title_or_content_cont ,class: "form-control",placeholder: "キーワードを入力してください"%>
  <%= f.submit :class=>"form-control "%>
<% end %>
    <p><%= notice %></p>
