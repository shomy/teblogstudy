<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
      <h1>ブログ一覧</h1>
      <% @carriers.each do |carrier| %>
        <p>タイトル:<%= markdown(carrier.title) %></p>
        <p>本文:<%= markdown(carrier.content) %></p>
        <% if current_user.admin == true %>
          <%= link_to "ブログを編集する", edit_carrier_path(carrier.id) %>
          <%= link_to "ブログを削除する", carrier_path(carrier.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %>
          <%= link_to "ブログを作成する", new_carrier_path %>
        <% end %>
      <% end %>
  </div>
</div>
