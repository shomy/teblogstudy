<p id="notice"><%= notice %></p>
<%= link_to "新しくTopicを作成", new_topic_path, class: 'btn btn-default' %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>user</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.user.name %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td><%= profile_img(topic.user) %></td>
        <td><%= link_to topic_path(topic) do %>
        <%== markdown(topic.title) %>
        <% end %></td>
        <td><%== markdown(topic.content) %></td>
        <td><%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to "削除", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
