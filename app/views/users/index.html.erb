<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %><br><br>
          <% if user.id != current_user.id %>
            <li>
              <div class="item">
                <%= link_to user.name, users_path %><br>
                <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: "btn btn-large btn-success"%><br>
              <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
            </li>
          <% end %>
      </div>
  <% end %>
</div>

